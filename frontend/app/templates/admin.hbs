  {{#link-to 'admin.settings' class='item'}}
  {{'Settings'}}
  {{/link-to}}
  {{/tabbed-navigation}}

</div>

<div class="ui basic segment">
  {{outlet}}
</div>

<script>
  $('.th.list.icon').click(function () {
    if ($('.tabbedlist')[0].style.display === "block") {
      $('.tabbedlist')[0].style.display = "none";
    }
    else {
      $('.tabbedlist')[0].style.display = "block";
    }
  })
  window.onresize = function (e) {
    if (e.currentTarget.innerWidth >= 767) {
      $('.tabbedlist')[0].style.display = "block";
    }
    else {
      $('.tabbedlist')[0].style.display = "none";
    }
  }
</script>