  {{'Admin'}}
  {{/link-to}}
  {{#link-to 'admin.users' class='item'}}
  {{'Users'}}
  {{/link-to}}
  {{#link-to 'admin.permissions' class='item'}}
  {{'Permissions'}}
  {{/link-to}}
  {{#link-to 'admin.badges' class='item'}}
  {{'Badges'}}
  {{/link-to}}
  {{#link-to 'admin.reports' class='item'}}
  {{'Reports'}}
