<div class="ui menu">
  {{#link-to 'index' class="header item"}}
    <h2>Badgeyay</h2>
  {{/link-to}}
  <div class="right menu">
    {{#if session.isAuthenticated}} 
      <div class="item">
          <div class="circular ui red button"  style="text-transform: uppercase; font-weight: 400"  {{action 'logOut'}} >Logout</div>
      </div>  
    {{else}}
      <div class="item">
        {{#link-to 'login'}}
          <div class="circular ui orange button" style="text-transform: uppercase; font-weight: 400">Login</div>
        {{/link-to}}
      </div>  
    {{/if}}
  </div>
</div>
